{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["typings", "node_modules/@types"],
    "moduleResolution": "node",
    "baseUrl": "app",
    "paths": {
      "@contexts/*": ["contexts/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@tailwind": ["tailwind"]
    }
  }
}
